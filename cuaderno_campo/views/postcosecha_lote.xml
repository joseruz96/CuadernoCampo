<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="cuaderno_campo.postcosecha_lote_list">
      <field name="name">Detalle Postcosecha</field>
      <field name="model">cuaderno_campo.postcosecha_lote</field>
      <field name="arch" type="xml">
        <tree>
          <field name="fecha"/>
          <field name="lote_id"/>
          <field name="lote"/>
          <field name="dosis"/>
          <field name="cantidad_aplicado"/>
          <field name="involucrado_id" string='Operador'/>

          <!-- <field name= "estado"/> -->
        </tree>
      </field>
    </record>

    

    
     <record model="ir.ui.view" id="cuaderno_campo.postcosecha_lote_form">
            <field name="name">Detalle Postcosecha</field>
            <field name="model">cuaderno_campo.postcosecha_lote</field>
            <field name="arch" type="xml">
                <form string="cuaderno_campo form">
                    <!--<header>
                        <field name="estado" widget="statusbar" clickable="True"/>
                    </header> -->
                    <sheet>
                        <group col="4">
                            <field name="fecha"/>
                            <field name="lote_id"/>
                            <field name="lote"/>
                            <field name="dosis"/>
                            <field name="cantidad_aplicado"/>
                            <field name="involucrado_id" string='Operador' />                        
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    <!-- actions opening views on models -->
 
    <record model="ir.actions.act_window" id="cuaderno_campo_postcosecha_lote_action_window">
      <field name="name">Lista Detalle Postcosecha</field>
      <field name="res_model">cuaderno_campo.postcosecha_lote</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="cuaderno_campo_postcosecha_lote_action_server">
      <field name="name">cuaderno_campo server</field>
      <field name="model_id" ref="model_cuaderno_campo_postcosecha_lote"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <menuitem name="Detalle Postcosecha" id="cuaderno_campo_postcosecha_lote" parent="menu_cuaderno_campo" action="cuaderno_campo_postcosecha_lote_action_window"/>

  </data>
</odoo>